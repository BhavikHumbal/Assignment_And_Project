
@{
    ViewBag.Title = "Index";
    var unamecookies = Request.Cookies["uname"] == null ? "" : Request.Cookies["uname"].Value;
    var passcookies = Response.Cookies["pass"] == null ? "" : Request.Cookies["pass"].Value;
}
<script>
    function getcookies() {
        var uname = document.getElementById("txtuname").value;
        if (uname == "@unamecookies") {
            document.getElementById("txtpass").value = "@passcookies";
        }
    }
</script>
<h2>Index</h2>

@using (Html.BeginForm())
{
<div class=" form-horizontal">
    <div class="form-group">
        <label class="control-label">user name</label>
        <div>
            <input name="txtuname" id="txtuname" type="text" class="form-control" onchange="getcookies()" />
        </div>
    </div>

    <div class=" form-horizontal">
        <label class="control-label">password</label>
        <div>
            <input name="txtpass" id="txtpass" type="text" class="form-control" onchange="getcookies()" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label"></label>
        <div>
            <input type="submit" class="btn btn-info" value="login" />
        </div>
    </div>
</div>
}

